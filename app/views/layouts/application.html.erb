<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
<!-- START_HIGHLIGHT -->
  <title>Pragprog Books Online Store</title>
<!-- END_HIGHLIGHT -->
  <!-- <label id="code.slt"/> -->
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %><!-- <label id="code.jlt"/> -->
  <%= csrf_meta_tags %>
<!-- END:head -->
<body class="<%= controller.controller_name %>">
<!-- START_HIGHLIGHT -->
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
     <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
       <%= render @cart %>
     <% end %>
   <% end %>
    <!-- <% if  @cart %>
      <div id="cart">
        <%= render @cart %>
      </div>
    <% end %> -->
      <ul>
        <li><%= link_to  "Home", "/" %></li>
        <li><%= link_to "Questions", pages_FAQ_path %></li>
        <li><%= link_to "NEWS", pages_NEWS_path %></li>
        <li><%= link_to "Login", login_path %></li>
      </ul>
      <% if session[:user_id] %>
       <ul>
         <li><%= link_to 'Orders',   orders_path   %></li>
         <li><%= link_to 'Products', products_path %></li>
         <li><%= link_to 'Users',    users_path    %></li>
       </ul>
       <%= button_to 'Logout', logout_path, method: :delete   %>
     <% end %>

      <% if controller.controller_name == 'store' %>
      <div id="new">
          <%= render partial: "products/small" %>
      </div>
      <% end %>
    </div>
    <div id="main">

      <%= yield %>
    </div>
  </div>

</body>
</html>
